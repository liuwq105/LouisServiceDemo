<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.louisgeek.louisservicedemo.MainActivity">

    <Button
        android:id="@+id/id_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始" />

    <Button
        android:id="@+id/id_btn2"
        android:layout_below="@id/id_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束" />
    <View
        android:id="@+id/id_v"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/id_btn2"
        android:background="@color/colorAccent"
        ></View>

    <Button
        android:id="@+id/id_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_v"
        android:text="绑定" />

    <Button
        android:id="@+id/id_btn4"
        android:layout_below="@id/id_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消" />

    <Button
        android:id="@+id/id_btn5"
        android:layout_below="@id/id_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看状态" />
    <View
        android:id="@+id/id_v2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/id_btn5"
        android:background="@color/colorAccent"
        ></View>

    <Button
        android:id="@+id/id_btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_v2"
        android:text="绑定" />

    <View
        android:id="@+id/id_v3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/id_btn6"
        android:background="@color/colorAccent"
        ></View>

    <Button
        android:id="@+id/id_btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_v3"
        android:text="定时service" />

    <Button
        android:id="@+id/id_btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_btn7"
        android:text="定时receiver" />


    <Button
        android:id="@+id/id_btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_btn8"
        android:text="定时aty" />
</RelativeLayout>
